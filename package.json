{
	"name": "souken-culture",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"cdev": "wrangler dev ./node_modules/cfw-bindings-wrangler-bridge/worker.js",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"generate": "drizzle-kit generate:sqlite --schema=./src/lib/schema.ts",
		"migrate": "wrangler d1 execute souken --file "
	},
	"devDependencies": {
		"@iconify/svelte": "^3.1.4",
		"@playwright/test": "^1.38.1",
		"@sveltejs/adapter-cloudflare": "^2.3.3",
		"@sveltejs/kit": "^1.25.1",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"autoprefixer": "^10.4.16",
		"cfw-bindings-wrangler-bridge": "^0.7.0",
		"daisyui": "^3.8.3",
		"drizzle-kit": "^0.19.13",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.33.2",
		"modern-css-reset": "^1.4.0",
		"postcss": "^8.4.31",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vitest": "^0.34.6"
	},
	"type": "module",
	"dependencies": {
		"@auth/core": "^0.13.0",
		"@auth/sveltekit": "^0.3.8",
		"drizzle-orm": "^0.28.6"
	}
}
